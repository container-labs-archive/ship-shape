{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "staging-frontend",
      "public": "dist",
      "rewrites": [
        {
          "source": "/graphql", "function": "graphql"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production-frontend",
      "public": "dist",
      "rewrites": [
        {
          "source": "/graphql", "function": "graphql"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
